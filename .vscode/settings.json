{
    "verilog.languageServer.hdlChecker.enabled": false,
    "verilog.linting.linter": "verilator",
    "verilog.linting.verilator.includePath": [
        "hdl/"
    ],
    "verilog.linting.verilator.arguments": "-DLINTING",
    "files.associations": {
        "*.mra": "xml",
        "ostream": "cpp",
        "fstream": "cpp"
    },
    "cmake.configureOnOpen": false,
    "verilog.ctags.indexAllIncludes": true,
    "verilog.lint.slang.path": "/usr/local/bin/slang",
    "C_Cpp.default.configurationProvider": "ms-vscode.makefile-tools",
    "C_Cpp.default.compilerPath": "/usr/bin/clang++"
}